datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

enum Topic {
  Football
  Kpop
  Technology
  Others
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  imageKey  String?
  topic     Topic    
  createdAt DateTime @default(now())
}